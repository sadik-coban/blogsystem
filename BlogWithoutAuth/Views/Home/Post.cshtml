@model BlogWithoutAuth.Models.Post

@{
    ViewData["Title"] = "Details";
}

<div>

    <h1>
        @Html.DisplayFor(model => model.Title)
    </h1>
    <hr />
    <h6>@Html.DisplayNameFor(model => model.Author)</h6>
    @Html.DisplayFor(model => model.Author.Name)
    <h6>@Html.DisplayNameFor(model => model.Category)</h6>
    @Html.DisplayFor(model => model.Category.Name)
    <h6>@Html.DisplayNameFor(model => model.Tags)</h6>
    @for (int i = 0; i < Model.Tags.Count; i++)
    {
        if (i == Model.Tags.Count - 1)
        {
            ViewBag.TagStr += Model.Tags[i].Name;
        }
        else
        {
            ViewBag.TagStr += Model.Tags[i].Name + " | ";
        }
    }
    @ViewBag.TagStr
    <div>
        @Html.Raw(Model.Content)
    </div>
    
    @* @Html.DisplayFor(model => model.Content) *@

</div>